extends ../layouts/common.pug

block content
	h1 
		span Users
		a.btn.btn-primary(href="/users/create") New

	.d-flex.align-items-center
		form.ml-auto(action="/users/search",method="GET",class="d-flex")
			input(type="text",name="name",class="form-control")
			button(class="btn btn-primary ml-1") Search

	table.table
		tr
			th Name
			th Avatar
			th Phone
			th Action

		each user in users
			tr
				td= user.name
				td
					img(src=user.avatar,width="32")
				td= user.phone
				td
					a.btn.btn-light(href='/users/'+user.id) View
		 
		 
				
		
		
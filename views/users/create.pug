extends ../layouts/common.pug

block content
	h1 Create Users
	if errors
		each error in errors
			.alert.alert-danger(role='alert')= error
	
	form(action='/users/create', method='POST',enctype="multipart/form-data")
		.form-group
			label(for="name") Name
			input#name.form-control(type='text', name='name',value=values ? values.name : '')
			label(for="password") Password
			input#password.form-control(type='password', name='password',value=values ? values.password : '')
			label(for="phone") Phone
			input#phone.form-control(type='text', name='phone',value=values ? values.phone : '')
			label(for="avatar") Avatar
			input#avatar.form-control-file(type='file', name='avatar')

		button.btn.btn-primary  Create